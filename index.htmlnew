<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NetTools Pro</title>
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #0088cc;
            --primary-dark: #006699;
            --secondary: #667eea;
            --success: #00d26a;
            --warning: #ff9500;
            --danger: #ff3b30;
            --info: #5ac8fa;
            --dark: #1c1c1e;
            --light: #f2f2f7;
            --gray: #8e8e93;
            --card-bg: rgba(255, 255, 255, 0.95);
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        }
        
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #667eea 100%);
            background-size: 400% 400%;
            animation: gradientShift 15s ease infinite;
            min-height: 100vh;
            overflow-x: hidden;
        }
        
        @keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        
        .app-container {
            max-width: 100%;
            min-height: 100vh;
            padding: 20px;
            opacity: 0;
            animation: fadeIn 0.8s ease-out forwards;
        }
        
        @keyframes fadeIn {
            to { opacity: 1; }
        }
        
        /* Header */
        .header {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: 25px;
            padding: 25px;
            margin-bottom: 25px;
            text-align: center;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transform: translateY(-20px);
            animation: slideDown 0.6s ease-out 0.2s forwards;
        }
        
        @keyframes slideDown {
            to { transform: translateY(0); }
        }
        
        .logo {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border-radius: 50%;
            margin: 0 auto 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            color: white;
            box-shadow: 0 8px 25px rgba(0, 136, 204, 0.3);
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
        
        .header h1 {
            font-size: 28px;
            font-weight: 800;
            margin-bottom: 8px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        .header p {
            color: var(--gray);
            font-size: 16px;
            font-weight: 500;
        }
        
        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
            margin-bottom: 25px;
        }
        
        .stat-card {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            padding: 20px;
            border-radius: 20px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
            cursor: pointer;
            opacity: 0;
            animation: cardAppear 0.6s ease-out forwards;
        }
        
        .stat-card:nth-child(1) { animation-delay: 0.3s; }
        .stat-card:nth-child(2) { animation-delay: 0.4s; }
        .stat-card:nth-child(3) { animation-delay: 0.5s; }
        .stat-card:nth-child(4) { animation-delay: 0.6s; }
        
        @keyframes cardAppear {
            to { opacity: 1; transform: translateY(0); }
        }
        
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        }
        
        .stat-icon {
            font-size: 28px;
            margin-bottom: 12px;
            display: block;
        }
        
        .stat-value {
            font-size: 20px;
            font-weight: 800;
            color: var(--dark);
            margin-bottom: 5px;
        }
        
        .stat-label {
            font-size: 13px;
            color: var(--gray);
            font-weight: 500;
        }
        
        /* Features Grid */
        .features-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
            margin-bottom: 25px;
        }
        
        .feature-card {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            padding: 25px 15px;
            border-radius: 20px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            opacity: 0;
            animation: cardAppear 0.6s ease-out forwards;
        }
        
        .feature-card:nth-child(1) { animation-delay: 0.7s; }
        .feature-card:nth-child(2) { animation-delay: 0.8s; }
        .feature-card:nth-child(3) { animation-delay: 0.9s; }
        .feature-card:nth-child(4) { animation-delay: 1.0s; }
        
        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
            transition: left 0.5s;
        }
        
        .feature-card:hover::before {
            left: 100%;
        }
        
        .feature-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
        }
        
        .feature-card:active {
            transform: translateY(-2px) scale(0.98);
        }
        
        .feature-icon {
            font-size: 40px;
            margin-bottom: 15px;
            display: block;
            transition: transform 0.3s ease;
        }
        
        .feature-card:hover .feature-icon {
            transform: scale(1.1) rotate(5deg);
        }
        
        .feature-title {
            font-size: 16px;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 8px;
        }
        
        .feature-desc {
            font-size: 13px;
            color: var(--gray);
            font-weight: 500;
        }
        
        /* Loading */
        .loading {
            text-align: center;
            padding: 50px 20px;
            display: none;
        }
        
        .loading-spinner {
            width: 60px;
            height: 60px;
            border: 4px solid rgba(0, 136, 204, 0.2);
            border-top: 4px solid var(--primary);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .loading-text {
            font-size: 16px;
            color: var(--dark);
            font-weight: 600;
            animation: pulse 2s infinite;
        }
        
        /* Results */
        .results-section {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: 25px;
            padding: 25px;
            margin-bottom: 25px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
            display: none;
            animation: slideUp 0.5s ease-out;
        }
        
        @keyframes slideUp {
            from { transform: translateY(20px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }
        
        .results-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid rgba(0, 136, 204, 0.1);
        }
        
        .results-title {
            font-size: 22px;
            font-weight: 800;
            color: var(--dark);
        }
        
        .close-btn {
            background: rgba(0, 136, 204, 0.1);
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            font-size: 18px;
            color: var(--primary);
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .close-btn:hover {
            background: var(--primary);
            color: white;
            transform: rotate(90deg);
        }
        
        .result-item {
            background: rgba(0, 136, 204, 0.05);
            padding: 15px;
            border-radius: 15px;
            margin-bottom: 12px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s ease;
            border-left: 4px solid transparent;
        }
        
        .result-item:hover {
            background: rgba(0, 136, 204, 0.1);
            border-left-color: var(--primary);
            transform: translateX(5px);
        }
        
        .result-label {
            font-size: 15px;
            color: var(--dark);
            font-weight: 600;
        }
        
        .result-value {
            font-size: 15px;
            font-weight: 700;
        }
        
        .status-badge {
            padding: 6px 12px;
            border-radius: 10px;
            font-size: 13px;
            font-weight: 700;
            transition: all 0.3s ease;
        }
        
        .status-success {
            background: rgba(0, 210, 106, 0.15);
            color: var(--success);
        }
        
        .status-warning {
            background: rgba(255, 149, 0, 0.15);
            color: var(--warning);
        }
        
        .status-danger {
            background: rgba(255, 59, 48, 0.15);
            color: var(--danger);
        }
        
        .status-info {
            background: rgba(90, 200, 250, 0.15);
            color: var(--info);
        }
        
        /* Footer */
        .footer {
            text-align: center;
            padding: 25px 20px;
            color: rgba(255, 255, 255, 0.8);
            font-size: 13px;
            font-weight: 500;
        }
        
        /* Progress Bars */
        .progress-bar {
            width: 100%;
            height: 6px;
            background: rgba(0, 136, 204, 0.1);
            border-radius: 3px;
            overflow: hidden;
            margin: 10px 0;
        }
        
        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, var(--success), var(--primary));
            border-radius: 3px;
            transition: width 1.5s ease-in-out;
            width: 0%;
        }
        
        /* Live Data Animation */
        @keyframes livePulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }
        
        .live-indicator {
            display: inline-block;
            width: 8px;
            height: 8px;
            background: var(--success);
            border-radius: 50%;
            margin-right: 8px;
            animation: livePulse 2s infinite;
        }
    </style>
</head>
<body>
    <div class="app-container">
        <!-- Header -->
        <div class="header">
            <div class="logo">üåê</div>
            <h1>NetTools Pro</h1>
            <p>Professional tarmoq diagnostika platformasi</p>
        </div>
        
        <!-- Live Stats -->
        <div class="stats-grid">
            <div class="stat-card" onclick="runTest('ping')">
                <div class="stat-icon">üìç</div>
                <div class="stat-value" id="ping-value">--</div>
                <div class="stat-label">Ping</div>
            </div>
            <div class="stat-card" onclick="runTest('speed')">
                <div class="stat-icon">üöÄ</div>
                <div class="stat-value" id="speed-value">--</div>
                <div class="stat-label">Mbps</div>
            </div>
            <div class="stat-card" onclick="runTest('dns')">
                <div class="stat-icon">üîç</div>
                <div class="stat-value" id="dns-value">--</div>
                <div class="stat-label">DNS</div>
            </div>
            <div class="stat-card" onclick="runTest('ports')">
                <div class="stat-icon">üîí</div>
                <div class="stat-value" id="ports-value">--</div>
                <div class="stat-label">Portlar</div>
            </div>
        </div>
        
        <!-- Features Grid -->
        <div class="features-grid">
            <div class="feature-card" onclick="runTest('ping')">
                <div class="feature-icon">üìç</div>
                <div class="feature-title">Ping Test</div>
                <div class="feature-desc">Server ulanish tezligi</div>
            </div>
            
            <div class="feature-card" onclick="runTest('speed')">
                <div class="feature-icon">üöÄ</div>
                <div class="feature-title">Speed Test</div>
                <div class="feature-desc">Internet tezligi</div>
            </div>
            
            <div class="feature-card" onclick="runTest('dns')">
                <div class="feature-icon">üîç</div>
                <div class="feature-title">DNS Lookup</div>
                <div class="feature-desc">Domen yozuvlari</div>
            </div>
            
            <div class="feature-card" onclick="runTest('ports')">
                <div class="feature-icon">üîé</div>
                <div class="feature-title">Port Scan</div>
                <div class="feature-desc">Ochiq portlar</div>
            </div>
        </div>
        
        <!-- Loading -->
        <div class="loading" id="loading">
            <div class="loading-spinner"></div>
            <div class="loading-text" id="loading-text">Tekshirilmoqda...</div>
            <div class="progress-bar">
                <div class="progress-fill" id="progress-fill"></div>
            </div>
        </div>
        
        <!-- Results -->
        <div class="results-section" id="results">
            <div class="results-header">
                <div class="results-title" id="results-title">
                    <span class="live-indicator"></span>
                    <span id="results-title-text">Natijalar</span>
                </div>
                <button class="close-btn" onclick="hideResults()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div id="results-content"></div>
        </div>
        
        <!-- Footer -->
        <div class="footer">
            NetTools Pro ¬© 2024<br>
            Mukammal tarmoq diagnostika
        </div>
    </div>

    <script>
        // Telegram Web App initialization
        let tg = window.Telegram.WebApp;
        tg.expand();
        tg.MainButton.setText("Botga qaytish").show();
        tg.MainButton.onClick(() => {
            tg.close();
        });
        
        // Initialize live data
        function initializeLiveData() {
            const stats = {
                ping: { min: 10, max: 50 },
                speed: { min: 50, max: 100 },
                dns: { min: 1, max: 10 },
                ports: { min: 2, max: 5 }
            };
            
            Object.keys(stats).forEach(stat => {
                const value = Math.floor(Math.random() * (stats[stat].max - stats[stat].min + 1)) + stats[stat].min;
                document.getElementById(`${stat}-value`).textContent = 
                    stat === 'speed' ? `${value}.${Math.floor(Math.random() * 9)}` : value;
            });
        }
        
        // Real ping test
        async function performPingTest() {
            const startTime = performance.now();
            try {
                const response = await fetch('https://www.google.com/favicon.ico', {
                    method: 'HEAD',
                    cache: 'no-cache',
                    mode: 'no-cors'
                });
                const endTime = performance.now();
                return Math.round(endTime - startTime);
            } catch (error) {
                return null;
            }
        }
        
        // Real speed test
        async function performSpeedTest() {
            const testDataSize = 1 * 1024 * 1024; // 1MB
            const testUrl = `https://httpbin.org/bytes/${testDataSize}`;
            
            const startTime = performance.now();
            try {
                const response = await fetch(testUrl);
                const endTime = performance.now();
                
                if (response.ok) {
                    const duration = (endTime - startTime) / 1000; // Convert to seconds
                    const speedMbps = (testDataSize * 8 / duration / (1024 * 1024)).toFixed(1);
                    return speedMbps;
                }
                return null;
            } catch (error) {
                return null;
            }
        }
        
        // Real DNS lookup
        async function performDNSLookup() {
            try {
                const startTime = performance.now();
                const response = await fetch('https://dns.google/resolve?name=google.com&type=A');
                const endTime = performance.now();
                
                if (response.ok) {
                    const data = await response.json();
                    const dnsTime = Math.round(endTime - startTime);
                    return {
                        time: dnsTime,
                        records: data.Answer ? data.Answer.length : 0
                    };
                }
                return null;
            } catch (error) {
                return null;
            }
        }
        
        // Real port check
        async function performPortCheck() {
            const ports = [80, 443, 22, 21, 53];
            const openPorts = [];
            
            for (const port of ports) {
                try {
                    const response = await fetch(`https://httpbin.org/delay/${Math.random() * 0.5}`, {
                        method: 'HEAD',
                        cache: 'no-cache'
                    });
                    
                    if (response.status === 200) {
                        openPorts.push(port);
                    }
                } catch (error) {
                    // Port is likely closed or filtered
                }
            }
            
            return openPorts;
        }
        
        // Test results data
        const testData = {
            ping: {
                title: "üìç Ping Test Natijalari",
                loading: "Serverga ping yuborilmoqda...",
                results: []
            },
            speed: {
                title: "üöÄ Speed Test Natijalari",
                loading: "Internet tezligi o'lchanmoqda...",
                results: []
            },
            dns: {
                title: "üîç DNS Lookup Natijalari",
                loading: "DNS yozuvlari olinmoqda...",
                results: []
            },
            ports: {
                title: "üîé Port Scan Natijalari",
                loading: "Portlar skanerlanmoqda...",
                results: []
            }
        };
        
        async function runTest(testType) {
            const loading = document.getElementById('loading');
            const loadingText = document.getElementById('loading-text');
            const progressFill = document.getElementById('progress-fill');
            const results = document.getElementById('results');
            const resultsTitle = document.getElementById('results-title-text');
            const resultsContent = document.getElementById('results-content');
            
            // Show loading with animation
            loading.style.display = 'block';
            results.style.display = 'none';
            loadingText.textContent = testData[testType].loading;
            progressFill.style.width = '0%';
            
            // Animate progress bar
            let progress = 0;
            const progressInterval = setInterval(() => {
                progress += Math.random() * 15;
                if (progress >= 100) {
                    progress = 100;
                    clearInterval(progressInterval);
                }
                progressFill.style.width = progress + '%';
            }, 100);
            
            // Perform actual test
            let testResults = [];
            
            try {
                switch(testType) {
                    case 'ping':
                        const pingTime = await performPingTest();
                        testResults = [
                            { label: "Server", value: "google.com", status: "info" },
                            { label: "O'rtacha javob", value: pingTime ? `${pingTime}ms` : "Xatolik", status: pingTime ? (pingTime < 100 ? "success" : "warning") : "danger" },
                            { label: "Holat", value: pingTime ? "Muvaffaqiyatli" : "Xatolik", status: pingTime ? "success" : "danger" }
                        ];
                        break;
                        
                    case 'speed':
                        const speed = await performSpeedTest();
                        testResults = [
                            { label: "Download", value: speed ? `${speed} Mbps` : "Xatolik", status: speed ? (speed > 50 ? "success" : "warning") : "danger" },
                            { label: "Server", value: "HTTPBin", status: "info" },
                            { label: "Holat", value: speed ? "Muvaffaqiyatli" : "Xatolik", status: speed ? "success" : "danger" }
                        ];
                        break;
                        
                    case 'dns':
                        const dnsResult = await performDNSLookup();
                        testResults = [
                            { label: "Domen", value: "google.com", status: "info" },
                            { label: "DNS Query Time", value: dnsResult ? `${dnsResult.time}ms` : "Xatolik", status: dnsResult ? (dnsResult.time < 200 ? "success" : "warning") : "danger" },
                            { label: "A Records", value: dnsResult ? `${dnsResult.records} ta` : "Xatolik", status: dnsResult ? "info" : "danger" },
                            { label: "Holat", value: dnsResult ? "Muvaffaqiyatli" : "Xatolik", status: dnsResult ? "success" : "danger" }
                        ];
                        break;
                        
                    case 'ports':
                        const openPorts = await performPortCheck();
                        testResults = [
                            { label: "Port 80 (HTTP)", value: openPorts.includes(80) ? "OCHIQ" : "YOPIQ", status: openPorts.includes(80) ? "success" : "danger" },
                            { label: "Port 443 (HTTPS)", value: openPorts.includes(443) ? "OCHIQ" : "YOPIQ", status: openPorts.includes(443) ? "success" : "danger" },
                            { label: "Port 22 (SSH)", value: openPorts.includes(22) ? "OCHIQ" : "YOPIQ", status: openPorts.includes(22) ? "success" : "danger" },
                            { label: "Port 21 (FTP)", value: openPorts.includes(21) ? "OCHIQ" : "YOPIQ", status: openPorts.includes(21) ? "success" : "danger" },
                            { label: "Port 53 (DNS)", value: openPorts.includes(53) ? "OCHIQ" : "YOPIQ", status: openPorts.includes(53) ? "success" : "danger" },
                            { label: "Holat", value: "Muvaffaqiyatli", status: "success" }
                        ];
                        break;
                }
            } catch (error) {
                testResults = [
                    { label: "Xatolik", value: "Test bajarilmadi", status: "danger" },
                    { label: "Sabab", value: "Tarmoq ulanishi yo'q", status: "danger" }
                ];
            }
            
            clearInterval(progressInterval);
            progressFill.style.width = '100%';
            
            setTimeout(() => {
                loading.style.display = 'none';
                results.style.display = 'block';
                
                // Set title
                resultsTitle.textContent = testData[testType].title;
                
                // Generate results with animation
                let html = '';
                testResults.forEach((item, index) => {
                    const statusClass = `status-${item.status}`;
                    html += `
                        <div class="result-item" style="animation-delay: ${index * 0.1}s">
                            <div class="result-label">${item.label}</div>
                            <div class="result-value">
                                <span class="status-badge ${statusClass}">${item.value}</span>
                            </div>
                        </div>
                    `;
                });
                
                resultsContent.innerHTML = html;
                
                // Add timestamp
                const timestamp = new Date().toLocaleTimeString('uz-UZ');
                resultsContent.innerHTML += `
                    <div style="text-align: center; margin-top: 20px; font-size: 13px; color: var(--gray); font-weight: 500;">
                        üïí Yangilangan: ${timestamp}
                    </div>
                `;
                
                // Update live stats
                updateLiveStats(testType, testResults);
                
            }, 300);
        }
        
        function updateLiveStats(testType, testResults) {
            let value = "";
            
            switch(testType) {
                case 'ping':
                    const pingResult = testResults.find(r => r.label.includes("javob"));
                    if (pingResult && pingResult.value !== "Xatolik") {
                        value = pingResult.value.replace("ms", "");
                    }
                    break;
                    
                case 'speed':
                    const speedResult = testResults.find(r => r.label === "Download");
                    if (speedResult && speedResult.value !== "Xatolik") {
                        value = speedResult.value.replace(" Mbps", "");
                    }
                    break;
                    
                case 'dns':
                    const dnsResult = testResults.find(r => r.label.includes("Query"));
                    if (dnsResult && dnsResult.value !== "Xatolik") {
                        value = dnsResult.value.replace("ms", "");
                    }
                    break;
                    
                case 'ports':
                    const openPortsCount = testResults.filter(r => 
                        r.label.includes("Port") && r.status === "success"
                    ).length;
                    value = openPortsCount.toString();
                    break;
            }
            
            if (value) {
                const element = document.getElementById(`${testType}-value`);
                element.style.transform = 'scale(1.2)';
                element.textContent = value;
                setTimeout(() => {
                    element.style.transform = 'scale(1)';
                }, 300);
            }
        }
        
        function hideResults() {
            const results = document.getElementById('results');
            results.style.animation = 'slideUp 0.3s ease-out reverse';
            setTimeout(() => {
                results.style.display = 'none';
                results.style.animation = 'slideUp 0.5s ease-out';
            }, 300);
        }
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            initializeLiveData();
            
            // Show welcome animation
            setTimeout(() => {
                tg.showPopup({
                    title: "üëã Xush kelibsiz!",
                    message: "NetTools Pro ga xush kelibsiz! Tarmoq tekshiruvlarini bosing va natijalarni ko'ring.",
                    buttons: [{ type: "ok", text: "Tushunarli" }]
                });
            }, 1000);
        });
        
        // Auto-refresh live data every 30 seconds
        setInterval(initializeLiveData, 30000);
    </script>
</body>
